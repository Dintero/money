{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
        "includes": [
            "**",
            "!**/*.d.ts",
            "!**/.build",
            "!**/.reports",
            "!**/.vscode",
            "!**/dist",
            "!**/node_modules"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "lineWidth": 80,
        "indentWidth": 4,
        "formatWithErrors": false
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "javascript": {
        "formatter": {
            "semicolons": "always",
            "trailingCommas": "all",
            "arrowParentheses": "always",
            "bracketSameLine": false,
            "bracketSpacing": true
        }
    },
    "json": {
        "formatter": {
            "indentWidth": 4,
            "trailingCommas": "none"
        }
    }
}
